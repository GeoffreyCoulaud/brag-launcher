                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="stopGameButton">
                        <child>
                          <object class="GtkImage">
                            <property name="file">UI/resources/stop_black_24dp.svg</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="killGameButton">
                        <child>
                          <object class="GtkImage">
                            <property name="file">UI/resources/dangerous_black_24dp.svg</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
