                    <property name="justify">center</property>
                    <property name="label">Game title</property>
                    <property name="halign">center</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gameInfoPlatform">
                    <property name="label">Hardware / Platform</property>
                    <property name="halign">center</property>
                  </object>
                </child>
