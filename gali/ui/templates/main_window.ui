<?xml version="1.0" encoding="UTF-8"?>
<interface>
  
  <!-- App headerbar menu -->
            
  <menu id='app-menu'>
    <section>
      <item>
        <attribute name='label' translatable='yes'>_Scan Library</attribute>
        <attribute name='action'>app.scan</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_Print Library</attribute>
        <attribute name='action'>app.print-library</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_Preferences</attribute>
        <attribute name='action'>app.preferences</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_Keyboard Shortcuts</attribute>
        <attribute name='action'>app.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_About Gali</attribute>
        <attribute name='action'>app.about</attribute>
      </item>
    </section>
  </menu>
  
  <!-- Main window -->

  <object class="AdwApplicationWindow">
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        
        <!-- Header bar -->
        
        <child>
          <object class="AdwHeaderBar">
						<child type="end">
							<object class="GtkMenuButton">
								<property name="menu-model">app-menu</property>
								<property name="icon-name">open-menu-symbolic</property>
							</object>
						</child>
						<child type="end">
							<object class="GtkButton">
								<child>
									<object class="GtkBox">
										<child>
											<object class="AdwButtonContent">
												<property name="icon-name">application-x-addon-symbolic</property>
											</object>
										</child>
										<child>
											<object class="GtkPopover" id="filter-popover">
												<child>
													<object class="GtkBox" id="filter-popover-box">
														<property name="orientation">vertical</property>
														<!-- Insert Gtk.CheckButton with label here -->
													</object>
												</child>
											</object>
										</child>
									</object>
								</child>
							</object>  
						</child>
          </object>
        </child>
        
        <!-- Content -->  
        
        <child>
          <object class="GtkStack" id="view-stack">
            <property name="vexpand">true</property>
            <property name="transition-type">crossfade</property>
            
            <!-- No games view -->
            
            <child>
              <object class="GtkStackPage">
                <property name="name">no-games-view</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">system-search-symbolic</property>
                    <property name="title">No games found</property>
                    <property name="description">Maybe try a new library scan broader filter</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">300</property>
                        <child>
                          <object class="GtkButton">
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Scan sources</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            
          </object>
        </child>
        
      </object>
    </property>
  </object>
</interface>